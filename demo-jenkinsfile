@Library('pritam-shared') _

pipeline {
    agent any

    parameters {
        string(
            name: 'REPO_URL', 
            defaultValue: 'https://github.com/MyGurukulam-p11/infrastructure_p11.git', 
            description: 'Repository URL to clone'
        )
        string(
            name: 'WORKSPACE_DIR', 
            defaultValue: '/var/lib/jenkins/workspace/pratice1/env/dev/application/attendance', 
            description: 'Workspace directory for Terraform'
        )
        choice(
            name: 'ACTION', 
            choices: ['apply', 'destroy'], 
            description: 'Choose whether to apply or destroy the Terraform infrastructure'
        )
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs() // Cleans up the Jenkins workspace
            }
        }

        stage('Clone Repository') {
            steps {
                script {
                    cloneRepo(params.REPO_URL, branch: 'Priyanshu_scrum_223', credentialsId: 'Devops-repo-cred')
                }
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    init(this, params.WORKSPACE_DIR) // Use the parameterized workspace directory
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                script {
                    validate(this, params.WORKSPACE_DIR) // Validate the Terraform configuration
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    plan(this, params.WORKSPACE_DIR) // Use the parameterized workspace directory
                }
            }
        }

        stage('Terraform Action') {
            steps {
                script {
                    if (params.ACTION == 'apply') {
                        input message: 'Approve Terraform Apply?', ok: 'Apply'
                        apply(this, params.WORKSPACE_DIR, true) // Auto-approve the apply
                    } else if (params.ACTION == 'destroy') {
                        input message: 'Approve Terraform Destroy?', ok: 'Destroy'
                        destroy(this, params.WORKSPACE_DIR, true) // Auto-approve the destroy
                    }
                }
            }
        }
    }
}
